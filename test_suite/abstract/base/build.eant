<?xml version="1.0"?>

<project name="eposix_test" default="help">

	<description>
		system: "Execute child process test for POSIX or Windows"
		copyright: "Copyright (c) 2003 by Berend de Boer"
		license: "MIT License (see LICENSE)"
		date: "$Date: $"
		revision: "$Revision: $"
	</description>

	<inherit>
		<parent location="${GOBO}/misc/test.eant">
			<redefine target="init_system"/>
		</parent>
	</inherit>


<!-- Implementation -->

	<target name="init_system">
		<set name="system" value="eposix_test"/>
		<set name="library" value="abstract/base"/>
		<set name="system_dir" value="${EPOSIX}/test_suite/${library}"/>
	</target>

</project>
