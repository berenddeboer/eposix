indexing

	description: "Class that covers the syslog.h header."

	author: "Berend de Boer"
	date: "$Date: 2007/05/18 $"
	revision: "$Revision: #1 $"

class

	SAPI_SYSLOG


feature {NONE} -- C binding

	posix_openlog (ident: POINTER; option, facility: INTEGER) is
			-- Open connection to system logger.
#ifdef ISE
		external "C blocking"
#else
		external "C"
#endif
		end

	posix_syslog (priority: INTEGER; msg: POINTER) is
			-- Write `msg' to log.
		require
			msg_not_nil: msg /= default_pointer
#ifdef ISE
		external "C blocking"
#else
		external "C"
#endif
		end

	posix_closelog is
			-- Close desriptor used to write to system logger.
#ifdef ISE
		external "C blocking"
#else
		external "C"
#endif
		end


end
